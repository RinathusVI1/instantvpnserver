doctype html
html(lang='en')
    include block/head
    body#index
        a(href='https://github.com/sockeye44/instavpn')
          img(style='position: absolute; top: 0; right: 0; border: 0;', src='https://camo.githubusercontent.com/e7bbb0521b397edbd5fe43e7f760759336b5e05f/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f677265656e5f3030373230302e706e67', alt='Fork me on GitHub', data-canonical-src='https://s3.amazonaws.com/github/ribbons/forkme_right_green_007200.png')
        .container-fluid
            .masthead.center-block
                h1.text-muted InstaVPN

        .well.center-block
            .row
                form.form-signin.center-block(role='form', action="/", method="post")
                    .form-group
                        label.sr-only(for='inputEmail') #{__("Username")}
                        input#inputEmail.form-control(type='text', placeholder=__("Username"), required='', autofocus='' name="user")
                    .form-group
                        label.sr-only(for='inputPassword') #{__("Password")}
                        input#inputPassword.form-control(type='password', placeholder=__("Password"), required='', name="password")
                    .form-group
                        button.btn.btn-lg.btn-primary.btn-block(type='submit') #{__("Ok")}
            if locals.message != ''
                .row
                    .alert.alert-danger(role='alert')
                          strong #{message}
        include block/scripts